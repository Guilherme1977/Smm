{% include 'header.twig' %}

{% if user['auth'] %}
    <div class="content-body">
{% else %}
    <div class="slider-social" style="margin-top:0">
{% endif %}

    <div class="container pd-x-0">
    {% if user['auth'] %}
        <div class="d-sm-flex align-items-center justify-content-between mg-b-20 mg-lg-b-25 mg-xl-b-30">
    {% else %}
        <div class="d-sm-flex align-items-center justify-content-between mg-b-20 mg-t-100 mg-lg-b-25 mg-xl-b-30">
    {% endif %}
            <div>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb breadcrumb-style1 mg-b-10">
                        <li class="breadcrumb-item"><a href="#">{{ constant("HOME") }}</a></li>
                        <li class="breadcrumb-item active" aria-current="page">{{ constant("APIDOCUMENT") }}</li>
                    </ol>
                </nav>
                <h4 class="mg-b-0 tx-spacing--1">{{ constant("APIDOCUMENT") }}</h4>
            </div>
        </div>

        <div class="row">

            <div class="col-md-12">
                <div class="card">
                    <div class="card-body">

                        <table class="table table-bordered">
                            <tbody>
                                <tr>
                                    <td class="width-40">HTTP Method</td>
                                    <td>POST</td>
                                </tr>
                                <tr>
                                    <td>API URL</td>
                                    <td>{{ site["url"] }}/api/v2</td>
                                </tr>
                                {% if user['auth'] %}
                                <tr>
                                    <td>API Key</td>
                                    <td>{{ user["apikey"] }}</td>
                                </tr>
                                {% endif %}
                                <tr>
                                    <td>Return</td>
                                    <td>JSON</td>
                                </tr>
                            </tbody>
                        </table>
                        <hr>
                        <h4 class="m-t-md"><strong> Service </strong></h4>
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th class="width-40">Parameter</th>
                                    <th>Description</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>key</td>
                                    <td>User API Key</td>
                                </tr>
                                <tr>
                                    <td>action</td>
                                    <td>services</td>
                                </tr>
                            </tbody>
                        </table>
                        <p><strong>Sample return</strong></p>
<pre>[
    {
        "service": 1,
        "name": "Followers",
        "type": "Default",
        "category": "First Category",
        "rate": "0.90",
        "min": "50",
        "max": "10000"
    },
    {
        "service": 2,
        "name": "Comments",
        "type": "Custom Comments",
        "category": "Second Category",
        "rate": "8",
        "min": "10",
        "max": "1500"
    }
]</pre>
                        <hr>
                        <h4 class="m-t-md"><strong> New Order </strong></h4>
                        <p>
                        </p>
                        <form class="form-inline">
                            <div class="form-group">
                                <select class="form-control input-sm" id="api_servicetype">
                                    <option value="1">Standart</option>
                                </select>
                            </div>
                        </form>
                        <p></p>
                        <div id="add_">
                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th class="width-40">Parameter</th>
                                        <th>Description</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>key</td>
                                        <td>User API Key</td>
                                    </tr>
                                    <tr>
                                        <td>action</td>
                                        <td>add</td>
                                    </tr>
                                    <tr>
                                        <td>service</td>
                                        <td>Service ID</td>
                                    </tr>
                                    <tr>
                                        <td>link</td>
                                        <td>Order link</td>
                                    </tr>
                                    <tr>
                                        <td>quantity</td>
                                        <td>Quantity</td>
                                    </tr>
                                    <tr>
                                        <td>runs (optional)</td>
                                        <td>Runs to deliver</td>
                                    </tr>
                                    <tr>
                                        <td>interval (optional)</td>
                                        <td>Interval in minutes</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                        <p><strong>Sample Return</strong></p>
<pre>{
    "order": 23501
}</pre>
                        <hr>
                        <h4 class="m-t-md"><strong> Order Status </strong></h4>
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th class="width-40">Parameter</th>
                                    <th>Description</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>key</td>
                                    <td>User API Key</td>
                                </tr>
                                <tr>
                                    <td>action</td>
                                    <td>status</td>
                                </tr>
                                <tr>
                                    <td>order</td>
                                    <td>Order ID</td>
                                </tr>
                            </tbody>
                        </table>
                        <p><strong>Sample Return</strong></p>
<pre>{
    "charge": "0.27819",
    "start_count": "3572",
    "status": "Partial",
    "remains": "157",
    "currency": "USD"
}</pre>
                        <hr>
                        <h4 class="m-t-md"><strong> User Balance </strong></h4>
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th class="width-40">Parameter</th>
                                    <th>Description</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>key</td>
                                    <td>User API Key</td>
                                </tr>
                                <tr>
                                    <td>action</td>
                                    <td>balance</td>
                                </tr>
                            </tbody>
                        </table>
                        <hr>
                        <p><strong>Sample Return</strong></p>
<pre>{
    "balance": "100.84292",
    "currency": "USD"
}</pre>
                        <hr>
                        <a href="example.txt" class="btn btn-primary m-t" target="_blank">Sample PHP File</a>
                    </div>

                </div>
            </div>
        </div>

    </div>
</div>

{% include 'footer.twig' %}