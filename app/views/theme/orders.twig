{% include 'header.twig' %}

<div class="content-body">
    <div class="container pd-x-0">
        <div class="d-sm-flex align-items-center justify-content-between mg-b-20 mg-lg-b-25 mg-xl-b-30">
            <div>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb breadcrumb-style1 mg-b-10">
                        <li class="breadcrumb-item"><a href="#">{{ constant("HOME") }}</a></li>
                        <li class="breadcrumb-item active" aria-current="page">{{ constant("MYORDERS") }}</li>
                    </ol>
                </nav>
                <h4 class="mg-b-0 tx-spacing--1">{{ constant("MYORDERS") }}</h4>
            </div>
        </div>

        <div class="row row-xs">

            <div class="col-md-12 mg-t-10">
                <div class="card">
                    <div class="card-body pd-20 table-responsive">

                        <table class="table" id="dt">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>#</th>
                                    <th>{{ constant("DATE") }}</th>
                                    <th class="width-40">{{ constant("LINK") }}</th>
                                    <th>{{ constant("AMOUNT") }}</th>
                                    <th class="nowrap">{{ constant("STARTCOUNT") }}</th>
                                    <th>{{ constant("QUANTITY") }}</th>
                                    <th>{{ constant("SERVICENAME") }}</th>
                                    <th>{{ constant("STATUS") }}</th>
                                    <th>{{ constant("REMAINS") }}</th>
                                </tr>
                            </thead>
                            <tbody>

                                {% for order in orders %}
                                <tr>
                                    <td>x</td>
                                    <td>{{ order['id'] }}</td>
                                    <td>{{ order['date'] }}</td>
                                    <td class="width-40">{{ order['link'] }}</td>
                                    <td>{{ order['charge'] }}</td>
                                    <td class="nowrap">{{ order['start_count'] }}</td>
                                    <td>{{ order['quantity'] }}</td>
                                    <td>{{ order['service'] }}</td>
                                    <td>{{ order['status'] }}</td>
                                    <td>{{ order['remains'] }}</td>
                                </tr>
                                {% endfor %}

                            </tbody>
                        </table>
                    </div>

                </div>
            </div>
        </div>

    </div>
</div>

{% include 'footer.twig' %}

<script>
    $(document).ready(function() {
        $('#dt').DataTable({
            responsive: true,
            language: {
                searchPlaceholder: '{{ constant("SEARCHORDER") }}',
                sSearch: '',
                lengthMenu: '_MENU_ {{ constant("SHOWORDER") }}',
            }
        });
    });
</script>